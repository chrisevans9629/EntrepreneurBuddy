@page
@model EntrepreneurBuddy.Areas.Identity.Pages.Account.MentorRegisterModel
@{
    ViewData["Title"] = "Register as Mentor";
}

<h1 class="align-center text-center name-color">@ViewData["Title"]</h1>

<div class="row d-flex justify-content-center">
    <div >
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h5 class="text-center">Create a new account.</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Input.FirstName"></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LastName"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LinkedInUrl"></label>
                            <input asp-for="Input.LinkedInUrl" class="form-control" />
                            <span asp-validation-for="Input.LinkedInUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Input.Bio"></label>
                            <textarea asp-for="Input.Bio" class="form-control" ></textarea>
                            <span asp-validation-for="Input.Bio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Position"></label>
                            <input asp-for="Input.Position" class="form-control" />
                            <span asp-validation-for="Input.Position" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Skills"></label>
                            <textarea asp-for="Input.Skills" class="form-control" ></textarea>
                            <span asp-validation-for="Input.Skills" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Zip"></label>
                            <input asp-for="Input.Zip" class="form-control" />
                            <span asp-validation-for="Input.Zip" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Image"></label>
                            <input asp-for="Input.Image" class="form-control" />
                            <span asp-validation-for="Input.Image" class="text-danger"></span>
                        </div>
                    </div>
                    
                    
                </div>
            </div>

            <button type="submit" class="button mt-2 mb-5">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
